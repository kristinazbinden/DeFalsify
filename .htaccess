RewriteEngine On

RewriteCond %{REQUEST_METHOD} ^GET$
RewriteRule ^gifts$ controllers/gifts.php?action=index


RewriteCond %{REQUEST_METHOD} ^POST$
RewriteRule ^gifts$ controllers/gifts.php?action=post

RewriteCond %{REQUEST_METHOD} ^PUT$
RewriteRule ^gifts/([0-9]+)$ controllers/gifts.php?action=update&id=$1

RewriteCond %{REQUEST_METHOD} ^DELETE$
RewriteRule ^gifts/([0-9]+)$ controllers/gifts.php?action=delete&id=$1
